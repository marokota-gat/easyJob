    "nomeAzienda": {
      "type": "string",
      "required": true
    },
    "logoAzienda": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "user": {
      "type": "relation",
